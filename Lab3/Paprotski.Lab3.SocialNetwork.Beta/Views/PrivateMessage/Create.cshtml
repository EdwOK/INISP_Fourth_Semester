@model Paprotski.Lab3.SocialNetwork.Beta.Models.CreatePrivateMessageViewModel

@{
    ViewBag.Title = "Создать";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "PrivateMessage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.ReceiverFullName, new { value = Model.ReceiverFullName })
    @Html.HiddenFor(m => m.ReceiverID, new { value = Model.ReceiverID })
    
    <div class="form-group">
        @Html.LabelFor(m => m.ReceiverFullName, new { @class = "col-md-2 control-label" })
        <div class="col-md-4">
            <p class="form-control-static">
                @Model.ReceiverFullName
            </p>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label", id = "message-label" })
        <div class="col-md-6">
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", id = "message", rows = "10", maxlength = "2000" })
        </div>
        <div class="col-md-offset-2 col-md-10" id="characterLeft"></div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Отправить" id="btnSubmit" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/message")
}