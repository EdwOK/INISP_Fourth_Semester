@model Paprotski.Lab3.SocialNetwork.Beta.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_LoginPage.cshtml";
    ViewBag.Title = "Регистрация";

    var genderSelect = new List<SelectListItem> { new SelectListItem() { Text = "Мужской", Value = "Мужской" }, new SelectListItem() { Text = "Женский", Value = "Женский" } };
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2 class="form-signin-heading">@ViewBag.Title</h2>

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "sr-only"} )
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Имя", required = "", autofocus = "" })
        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "sr-only" })
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Фамилия", required = "" })
        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Gender, new { @class = "sr-only" })
        @Html.DropDownListFor(m => m.Gender, genderSelect, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div class="input-group" id="datetimepicker">
            @Html.LabelFor(m => m.Birthday, new { @class = "sr-only" })
            @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { @class = "form-control", type = "text", placeholder = "Дата рождения" } })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
        @Html.ValidationMessageFor(m => m.Birthday, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", required = "" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль", type = "password", required = "" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Подтверждения пароля", type = "password", required = "" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
    </div>
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    
    <div class="form-group">
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Регистрация" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
