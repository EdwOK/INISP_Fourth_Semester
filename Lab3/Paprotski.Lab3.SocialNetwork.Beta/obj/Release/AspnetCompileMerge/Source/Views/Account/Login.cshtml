@model Paprotski.Lab3.SocialNetwork.Beta.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_LoginPage.cshtml";
    ViewBag.Title = "Логин";
}

@using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-signin", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h2 class="form-signin-heading">@ViewBag.Title</h2>

    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "sr-only" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", type = "email", required = "", autofocus = ""})
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-warning" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Пароль", type = "password", required = "", autofocus = "" })
        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-warning" })
    </div>
    
    @Html.ValidationSummary(true, "", new { @class = "text-warning" })
    
    <div class="form-group">
        <input class="btn btn-lg btn-primary btn-block" type="submit" value="Войти"/>
    </div>
    
    <div class="form-group">
        <div class="checkbox">
            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-signin checkbox"})
            @Html.LabelFor(m => m.RememberMe)
        </div>
    </div>
    
    <div class="text-center">
        @Html.ActionLink("Создать аккаунт", "Register")
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundels/jqueryval")
}